@model IEnumerable<FilmsStorage.Models.DB.v_Film>


<table class="table">
    <tr>
     
        <th>
            FilmName:
        </th>
        <th>
            Release:
        </th>
        <th>
            fileDescription:
        </th>   
        <th>
            GenreName:
        </th>
        <th>Actions:</th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.FilmName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Release)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fileDescription)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.GenreName)
        </td>
      
        <td>
            @Html.ActionLink("Download", "Download", new {  id=item.FilmID }, new {@class="btn btn-success"}) |
            @Html.ActionLink("Review", "Review", new {  id=item.FilmID  }, new {@class="btn btn-info"}) |
        </td>
    </tr>
}

</table>
